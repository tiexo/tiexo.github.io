<% if (typeof(script) !== 'undefined' && script) { %>
    <script src="/js/av-min.js"></script>
    <script src="/js/Valine.min.js"></script>
    <script>
        new Valine({
            el: '#valine-thread' ,
            notify:<%= theme.comment.valine.notify %>,
            verify:<%= theme.comment.valine.verify %>,
            app_id: '<%= theme.comment.valine.appId %>',
            app_key: '<%= theme.comment.valine.appKey %>',
            placeholder: '<%= theme.comment.valine.placeholder %>'
        });
    </script>
<% } else { %>
    <div id="valine-thread"></div>
<script> if(window.location.hash){ var checkExist = setInterval(function() { if ($(window.location.hash).length) { $('html, body').animate({scrollTop: $(window.location.hash).offset().top-90}, 1000); clearInterval(checkExist); } }, 100); } </script>

<% } %>